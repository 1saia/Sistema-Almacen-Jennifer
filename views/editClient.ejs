<!DOCTYPE html>
<html lang="es" dir="ltr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Editar datos del Cliente</title>
    <!-- FA pencil-->
    <link rel="stylesheet" href="path/to/font-awesome/css/font-awesome.min.css">
    <!-- Bootstrao-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"rel="stylesheet"integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"crossorigin="anonymous"/>
    <!-- Boxicons -->
    <link href="https://unpkg.com/boxicons@2.0.7/css/boxicons.min.css"rel="stylesheet"/>
    <!--Estilo CSS-->
    <link rel="stylesheet" href="resources/css/style.css" />
  </head>
  <body>
    <%- include('sidebar.ejs') %> 

    <% if(cliente) {%>

        <section class="home-section">
            <div class="Container px-3">
              <div class="row">
                <div class="col-sm-12 col-md-4 col-lg-4 col-xl-4">
                  <h3>Datos del cliente</h3>
                  <form action="/UpdateClient" method="post">
                      <div class="mb-2">
                        <label for="Nombre" class="form-label">Nombres</label>
                        <input type="text" class="form-control" id="Id_cl" name="Id_cl" value="<%= cliente.Id_Cliente %>" hidden>
                        <input type="text" class="form-control" id="Id_cl" name="Id_dir_cl" value="<%= cliente.Id_Direccion %>" hidden>
                        <input type="text" class="form-control" id="Nombre" name="Nombre_cl" value="<%= cliente.Nombre %>">
                      </div>
                      <div class="mb-2">
                        <label for="Apellido" class="form-label">Apellidos</label>
                        <input type="text" class="form-control" id="Apellido" name="Apellido_cl" value="<%= cliente.Apellido %>">
                      </div>
                      <div class="mb-2">
                          <label for="Telefono" class="form-label">Telefono</label>
                          <input type="number" class="form-control" id="Telefono" name="Telefono_cl" value="<%= cliente.Telefono %>">
                        </div>
                        <div class="mb-2">
                          <label for="Cedula" class="form-label">Cedula</label>
                          <input type="text" class="form-control" id="Cedula" name="Cedula_cl" value="<%= cliente.Cedula %>">
                        </div>
                        <div class="mb-1">
                          <label for="Residencia" class="form-label">Dirección</label>
                        </div>
                        <select id="Distrito" name="Distrito_cl" class="form-select mb-2" aria-label="Distrito">
                          <option selected><%= cliente.Distrito %></option>
                          <option value="I">I</option>
                          <option value="II">II</option>
                          <option value="III">III</option>
                          <option value="IV">IV</option>
                          <option value="V">V</option>
                          <option value="VI">VI</option>
                          <option value="VII">VII</option>
                        </select>
                        <div class="mb-2 dx-2">
                          <label for="Residencia" class="form-label">Zona de Residencia</label>
                          <input type="text" class="form-control" id="Residencia" name="Residencia_cl" value="<%= cliente.Zona_Residencia %>">
                        </div>
                        <div class="mb-2">
                          <label for="PuntoReferencia" class="form-label">Punto de Referencia</label>
                          <input type="text" class="form-control" id="PuntoReferencia" name="PuntoReferencia_cl" value="<%= cliente.Punto_Referencia %>">
                        </div>
                        <div class="mb-2">
                          <label for="Distancia" class="form-label">Distancia</label>
                          <input type="text" class="form-control" id="Distancia" name="Distancia_cl" value="<%= cliente.Distancia %>">
                        </div>
                        <div class="mb-2">
                          <label for="Casa" class="form-label">Numero de casa</label>
                          <input type="text" class="form-control" id="Casa" name="Casa_cl" value="<%= cliente.Casa %>">
                        </div>
                        <div class="d-grid gap-2">
                          <button type="submit" class="btn btn-success" title="Editar">Editar</button>
                          <button class="btn btn-secondary" title="Limpiar Campos">Limpiar Campos</button>
                        </div>
                      
                    </form>
                </div>

                <div class="col-sm-12 col-md-8 col-lg-8 col-xl-8">
                  <h2>Informacion del cliente</h2>
                  <table class="table primary">
                      <thead>
                        <tr>
                          <th class="centrado">Nombre completo</th>
                          <th class="centrado">Cedula</th>
                          <th class="centrado">Telefono</th>
                          <th class="centrado">Dirección</th>
                          <th class="centrado">Credito Disponible</th>
                        </tr>
                      </thead>
                      <tbody>
                        <td class="centrado"> <%= cliente.Nombre %> <%= cliente.Apellido %></td>
                        <td class="centrado"><%= cliente.Cedula %></td>
                        <td class="centrado"><%= cliente.Telefono %></td>
                        <td class="centrado"><%= cliente.Direccion %></td>
                        <td class="centrado"><%= cliente.Credito %></td>
      
                      </tbody>
                  </table>
                </div>
              </div>
            </div>
          </section>

    <% } %>

    <script src="/resources/js/script.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <% if (typeof alert != "undefined")  { %>
      <script>
          Swal.fire({
              title: '<%= alertTitle %>',
              text: '<%= alertMessage %>',
              icon: '<%= alertIcon %>',
              showConfirmButton: true,
              timer: false
          }).then(() => {
              window.location = '/<%= ruta %>'
          })
      </script>
  <% } %>

  
  </body>
</html>
